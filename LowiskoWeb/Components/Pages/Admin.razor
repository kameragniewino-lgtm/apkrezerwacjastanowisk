                        <div class="rank-row">
                            <span class="rank-label">Nr @st.Numer</span>
                            <div class="rank-bar-bg">
                                <div class="rank-bar" style="width:@pct.ToString("0", System.Globalization.CultureInfo.InvariantCulture)%"></div>
                            </div>
                            <span class="rank-count">@cnt rez.</span>
                        </div>
                    }
                </div>
            </div>
        }

        @if (zakladka == 1)
        {
            <div class="editor-info">
                <p>PrzeciÄ…gnij kÃ³Å‚ka na wÅ‚aÅ›ciwe miejsca, potem kliknij <strong>Zapisz pozycje</strong>.</p>
                <button class="btn-rezerwuj" @onclick="ZapiszPozycje">ğŸ’¾ Zapisz pozycje</button>
